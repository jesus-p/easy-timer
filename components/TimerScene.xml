<?xml version="1.0" encoding="UTF-8" ?>
<component name="TimerScene" extends="Scene">
<script type="text/brightscript" uri="pkg:/components/TimerScene.brs" />
  <children>
    <!-- Overhang with Easy Timer logo -->
    <Overhang
      id="overhang"
      showOptions="false"
      showClock="false"
      logoUri="pkg:/images/hd_overhang_logo.png"
      translation="[0,5]"
    />
    <!-- LoadingIndicator should be visible only in case of waiting for content -->
    <Label
        id="loadingIndicator"
        text="Loading..."
        width="1280"
        height="720"
        translation="[0, 0]"
        horizAlign="center"
        vertAlign="center"
        visible="false"
        font="font:MediumBoldSystemFont"
    />
    <!-- Clock in the middle -->
    <Label
      id="clockLabel"
      text="00:00:00"
      translation="[0,0]"
      horizAlign="center"
      vertAlign="center"
      width="1280"
      height="720"
      font="font:LargeSystemFont"
      color="#FFFFFF"
    />
    <Timer
      id="clockTimer"
      repeat="true"
      duration="1.0" />
    <!-- Standalone button, grouped for layout clarity -->
  </children>

  <interface>
    <!-- Optional: expose fields if needed later -->
  </interface>
</component>
